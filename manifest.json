{
    "manifest_version": 2,
    "name": "SnapText",
    "version": "1.0",
    "description": "Fornece textos prontos para serem inseridos em campos de formul√°rios em sites.",
    "icons": {
      "48": "icon.svg"
    },
    "permissions": ["activeTab", "clipboardWrite"],
    "background": {
      "scripts": ["background.js"]
    },
    "browser_action": {
      "default_popup": "popup.html",
      "default_icon": {
        "48": "icon.svg"
      }
    },
    "content_scripts": [
      {
        "matches": ["https://*/*", "http://*/*"],
        "js": ["content.js"],
        "run_at": "document_end"
      }
    ],
    "browser_specific_settings": {
      "gecko": {
        "id": "snaptext@orbitas.com.br",
        "strict_min_version": "58.0"
      }
    }
  }

